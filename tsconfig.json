{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "outDir": ".",
        "rootDir": ".",
        "declaration": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": ["es2015", "dom"]
    },
    "exclude": [
        "node_modules"
    ]
}

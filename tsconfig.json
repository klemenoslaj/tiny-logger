{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module": "es2015",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}